      <button type="button" name="ViewAppointments" class="button1" onclick="location.href='/viewappointment';" >View Appointments</button>
      <button type="button" name="DeleteAppointments" class="button1" onclick="location.href='/deleteappointment';">Delete Appointments</button>
    </div>
  </div>
  <div class="myaccount">
    <h6>My Account</h6>
    <div class="accounts">
      <button type="button" name="changepswd" class="button2" onclick="location.href='/editpatientroute';">Edit Account</button>
    </div>
  </div>
  <a href="Home.html" style="text-decoration:none"><button type="button" name="EditAccounts" class="button3">Logout</button></a>
  <div id="myModal" class="modal">

  

