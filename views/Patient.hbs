  height:200px;
  color: black;
  position:relative;
  top:30px;
}
h6{
  padding-top:10px;
  padding-left:10px;
  text-decoration: underline;
}
.accounts{
  text-align: center;
  width:80%;
  height:100px;
  background-color: #ccff33;
  position:relative;
  left:150px;
}
p.t1{
  font-size:15px;
  padding:5px
}
.button1{
  position: relative;
  left:50px;
  top:25px;
  margin-right:100px;
  height: 50px;
  width: 200px;
  background-color: black;
  color: white;
}
.button2{
  position: relative;
  left:50px;
  top:25px;
  margin-right:100px;
  height: 50px;
  width: 200px;
  background-color: black;
  color: white;
}

.appointments{
  text-align: center;
  width:80%;
  height:100px;
  background-color: #ccff33;
  position:relative;
  left:150px;
}
.myaccount {
  background-color: white;
  width:100%;
  height:300px;
  color: black;
  position:relative;
  top:30px;
}
.button3{
  position: absolute;
  top:257px;
  right: 10px;
  height: 30px;
  width: 80px;
  background-color: white;
  color: black;
  border-radius: 8px;
}

.modal, .modal2 {
  display: none;
  position: fixed;
  z-index: 1;
  padding-top: 100px;
  left: 0;
  top: 0;
  width: 100%;
  height: 100%;
  overflow: auto;
  background-color: rgb(0,0,0);
  background-color: rgba(0,0,0,0.4);
}
.modal-content, .modal-content2 {
  background-color: #fefefe;
  margin: auto;
  padding: 20px;
  border: 1px solid #888;
  width: 80%;
}
.close, .close2 {
  color: #aaaaaa;
  float: right;
  font-size: 28px;
  font-weight: bold;
}

.close:hover,
.close:focus,.close2:hover,
.close2:focus {
  color: #000;
  text-decoration: none;
  cursor: pointer;
}

input[type=text], input[type=password]{
  width: 100%;
  padding: 12px;
  border: 1px solid #ccc;
  border-radius: 4px;
  box-sizing: border-box;
  margin-top: 6px;
  margin-bottom: 16px;
  resize: vertical;
}
input[type=submit] {
  background-color: #FFFF00;
  color: black;
  width: 50%;
  padding: 12px 20px;
  border: none;
  border-radius: 4px;
  cursor: pointer;
  position: relative;
  margin-left: 15px;
  margin-top: 35px;
}
</style>
</head>
<body>
  <div class="header">
